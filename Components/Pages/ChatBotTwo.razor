@page "/chatbottwo"
@rendermode InteractiveServer

<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudPaper Elevation="12" Class="pa-4" Style="position: relative; height: 90vh;">
    <MudGrid Style="height: calc(100% - 40px);">
        <MudItem xs="12" Style="padding-bottom: 20px;" >
            <!-- Your first MudItem content goes here AlignItems="AlignItems.Center" -->
            <MudPaper Elevation="0" Height="80vh" style="overflow-y: auto;"> 
                <MudStack >
                    <UserQuestion />
                    <Tester />
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" Style="position: absolute; bottom: 20px; width: calc(100% - 40px);background: #FFFFFF;">
            <!-- Your second MudItem content goes here -->
            <MudStack Row="true" Style="background: #FFFFFF;">
                <MudSpacer />
                <MudTextField Lines="3" Style="background: #FFFFFF;" @bind-Value="@_textValue" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Send" />
                <MudSpacer />
            </MudStack>
        </MudItem>
    </MudGrid>
</MudPaper>



@code {
    private string _textValue;
}
