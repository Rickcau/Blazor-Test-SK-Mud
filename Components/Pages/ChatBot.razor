@page "/chatbot"
@rendermode InteractiveServer

<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />


    <MudContainer MaxWidth="MaxWidth.Small">
        <MudStack>
            <MudPaper Class="pa-4">
                <MudStack Row="true">
                    <MudAvatar Image="assets/DocTranslate.png" Size="Size.Large" />
                    <MudStack Justify="Justify.Center" Spacing="0">
                        <MudText Typo="Typo.body1">Document Translator</MudText>
                        <MudText Typo="Typo.body2">Upload a document for translation</MudText>
                    </MudStack>
                </MudStack>
            </MudPaper>

            <MudPaper Class="pa-4" >
                <MudStack Spacing="4">
                    <MudStack Row="true">
                        <MudTextField T="string" Label="Input Language" />
                        <MudTextField T="string" Label="Output Language" />
                    </MudStack>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true">Select File</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="true" DisableElevation="true">Upload</MudButton>
                </MudStack>
            </MudPaper>
        </MudStack>
    </MudContainer>

